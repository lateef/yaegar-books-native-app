{
  "name": "yaegar-books-native-app",
  "version": "0.1.0",
  "private": true,
  "devDependencies": {
    "babel-preset-react-native-stage-0": "^1.0.1",
    "detox": "^7.3.2",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.3",
    "fetch-mock": "^6.3.0",
    "jest": "^22.4.3",
    "jest-react-native": "^18.0.0",
    "jsdom": "11.6.2",
    "jsdom-global": "3.0.2",
    "react-test-renderer": "16.2.0",
    "redux-mock-store": "^1.5.1"
  },
  "scripts": {
    "start": "react-native start",
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "test": "node node_modules/jest/bin/jest.js",
    "test:coverage": "node node_modules/jest/bin/jest.js --coverage",
    "test:watch": "node node_modules/jest/bin/jest.js --watch",
    "test:e2e": "detox test -c ios.sim.debug",
    "test:e2e:build": "detox build",
    "test:e2e:ios": "detox build --configuration ios.sim.debug && detox test --configuration ios.sim.debug",
    "test:e2e:android": "detox build --configuration android.emu.debug && detox test --configuration android.emu.debug -l verbose"
  },
  "jest": {
    "preset": "react-native",
    "setupFiles": [
      "./jestsetup.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/build/",
      "/e2e/"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!react-native|expo|react-navigation|native-base-shoutem-theme|@shoutem/theme|@shoutem/animation|@shoutem/ui|tcomb-form-native|native-base)"
    ]
  },
  "detox": {
    "test-runner": "jest",
    "runner-config": "e2e/config.json",
    "configurations": {
      "ios.sim.release": {
        "binaryPath": "ios/build/Build/Products/Release-iphonesimulator/yaegarbooksnativeapp.app",
        "build": "export RCT_NO_LAUNCH_PACKAGER=true && xcodebuild -project ios/yaegarbooksnativeapp.xcodeproj -scheme yaegarbooksnativeapp -configuration Release -sdk iphonesimulator -derivedDataPath ios/build -quiet",
        "type": "ios.simulator",
        "name": "iPhone 7"
      },
      "ios.sim.debug": {
        "binaryPath": "ios/build/Build/Products/Debug-iphonesimulator/yaegarbooksnativeapp.app",
        "build": "xcodebuild -project ios/yaegarbooksnativeapp.xcodeproj -scheme yaegarbooksnativeapp -configuration Debug -sdk iphonesimulator -derivedDataPath ios/build",
        "type": "ios.simulator",
        "name": "iPhone 7"
      },
      "android.emu.release": {
        "binaryPath": "android/app/build/outputs/apk/app-release.apk",
        "build": "pushd android && ./gradlew assembleRelease assembleAndroidTest -DtestBuildType=release && popd",
        "type": "android.emulator",
        "name": "Nexus_5X_API_27"
      },
      "android.emu.debug": {
        "binaryPath": "android/app/build/outputs/apk/app-debug.apk",
        "build": "pushd android && ./gradlew assembleDebug assembleAndroidTest -DtestBuildType=debug && popd",
        "type": "android.emulator",
        "name": "Nexus_5X_API_27"
      }
    }
  },
  "dependencies": {
    "amazon-cognito-identity-js": "^2.0.2",
    "aws-sdk": "^2.217.1",
    "hash.js": "^1.1.3",
    "native-base": "^2.3.10",
    "react": "16.2.0",
    "react-dom": "^16.2.0",
    "react-native": "0.52.0",
    "react-native-navigation": "^1.1.422",
    "react-native-vector-icons": "^4.5.0",
    "react-redux": "^5.0.7",
    "redux": "^3.7.2",
    "redux-logger": "^3.0.6",
    "redux-promise-middleware": "^5.0.0",
    "redux-thunk": "^2.2.0",
    "validator": "^9.4.1"
  }
}
